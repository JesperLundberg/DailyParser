---
export interface Props {
  title: string;
  body: string;
  href: string;
  categories: [string];
}

const { href, title, body, categories } = Astro.props;
---

<a href={href} class="group relative block h-64 sm:h-80 lg:h-96">
  <span class="absolute inset-0 border-2 border-dashed border-black"></span>

  <div
    class="relative flex h-full transform items-end border-2 border-black bg-white transition-transform group-hover:-translate-x-2 group-hover:-translate-y-2"
  >
    <div
      class="p-4 !pt-0 transition-opacity group-hover:absolute group-hover:opacity-0 sm:p-6 lg:p-8"
    >
      {
        categories.includes("games") ? (
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="40"
            width="32"
            viewBox="0 0 640 512"
          >
            <path d="M192 64C86 64 0 150 0 256S86 448 192 448H448c106 0 192-86 192-192s-86-192-192-192H192zM496 168a40 40 0 1 1 0 80 40 40 0 1 1 0-80zM392 304a40 40 0 1 1 80 0 40 40 0 1 1 -80 0zM168 200c0-13.3 10.7-24 24-24s24 10.7 24 24v32h32c13.3 0 24 10.7 24 24s-10.7 24-24 24H216v32c0 13.3-10.7 24-24 24s-24-10.7-24-24V280H136c-13.3 0-24-10.7-24-24s10.7-24 24-24h32V200z" />
          </svg>
        ) : (
          <div />
        )
      }

      <h2 class="mt-4 text-xl font-medium sm:text-2xl">{title}</h2>
    </div>

    <div
      class="absolute p-4 opacity-0 transition-opacity group-hover:relative group-hover:opacity-100 sm:p-6 lg:p-8"
    >
      <h3 class="mt-4 text-xl font-medium sm:text-2xl">{body}</h3>

      <p class="mt-4 text-sm sm:text-base">
        {categories.map((item) => <span class="mr-2">{item}</span>)}
      </p>

      <p class="mt-8 font-bold">Read more</p>
    </div>
  </div>
</a>
